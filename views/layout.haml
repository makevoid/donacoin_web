  %body

    %button.nav-btn.hide{ href:"javascript:void(0)",onclick:"$('nav ul').fadeToggle(0)" }
      %i.fa.fa-bars
    %nav
      .row-fluid
        .span2.logo
          %a{ href: "/" }
            %img{ src:"/img/logo.png" }
        .span8
          %ul
            %li
              %a{ href: "/download" }
                %i.fa.fa-download
                Download
            %li
              %a{ href: "/causes"   } Causes
            %li
              %a{ href: "/donors"   } Donors
            %li
              %a{ href: "/guide"   } Guide
    .separator30
    .separator30
    .content
      = yield
    %footer
      .span2.centered-content
        Copyright Â© Donacoin #{Time.now.year}
      .span8.centered-content
        .span2
          %a{ href: "/terms" } terms and conditions
        .span1
          %a{ href: "/privacy" } privacy
        .span1
          %a{ href: "/contacts" } contacts
        .span2.pull-right
          %a.muted{ href:"http://bitcoin.org", target:"_blank" }
            We
            %i.fa.fa-heart
            %i.fa.fa-bitcoin
